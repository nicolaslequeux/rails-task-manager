<h1>Edit Task</h1>

<%= form_for @task, url: update_path(@task), method: :patch do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :completed %>
    <%= f.text_field :completed, class: 'form-control' %>
  </div>


    <%= f.submit class: 'btn btn-primary' %>

<% end %>

</br>

<%= link_to "Cancel", tasks_path %>

<%= link_to "Delete", destroy_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
